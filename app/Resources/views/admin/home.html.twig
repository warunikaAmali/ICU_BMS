{% extends 'base.html.twig' %}

{% block side_navigation %}
    <div class="list-group">
        {% if app.user and is_granted('ROLE_NURSE') %}
            <a href=" {{ path('add_patients') }} " class="list-group-item">Add Patients</a>
            <a href=" {{ path('addRecord') }} " class="list-group-item">Record Patient Details</a>

        {% endif %}
        {% if app.user and is_granted('ROLE_DOCTOR') %}
            <a href=" {{ path('view_patients') }} " class="list-group-item">View Patient Details</a>
            <a href=" {{ path('discharge_patients') }} " class="list-group-item">Discharge Patients</a>
            <a href=" {{ path('search_icu') }} " class="list-group-item">Search ICU</a>
        {% endif %}
        {% if app.user and is_granted('ROLE_ADMIN') %}
            <a href=" {{ path('addUser') }} " class="list-group-item">Add User</a>
            <a href=" {{ path('addICU') }} " class="list-group-item">Add ICU</a>
        {% endif %}

    </div>
{% endblock %}

{% block about %}
    {% if app.user and is_granted('ROLE_NURSE') %}
        <a href=" {{ path('add_beds') }} " class="list-group-item">Add Bed Details</a>

    {% endif %}
    <a href=" {{ path('change') }} " class="list-group-item">Change Password</a>
{% endblock %}

{% block main %}
    Welcome to Admin Page.
{% endblock %}